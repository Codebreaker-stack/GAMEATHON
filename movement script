using UnityEngine;

public class CharacterMovement2D : MonoBehaviour
{
    public float speed = 5f; // Movement speed
    public float jumpForce = 10f; // Jump force
    public LayerMask groundLayer; // Layer to detect the ground
    public Transform groundCheck; // Position to check if grounded
    public float groundCheckRadius = 0.2f; // Radius for ground check

    private Rigidbody2D rb;
    private bool isGrounded;

    void Start()
    {
        // Get the Rigidbody2D component
        rb = GetComponent<Rigidbody2D>();
    }

    void Update()
    {
        // Horizontal movement
        float moveX = Input.GetAxis("Horizontal"); // Get horizontal input
        rb.velocity = new Vector2(moveX * speed, rb.velocity.y);

        // Check if the character is grounded
        isGrounded = Physics2D.OverlapCircle(groundCheck.position, groundCheckRadius, groundLayer);

        // Jump
        if (Input.GetButtonDown("Jump") && isGrounded)
        {
            rb.velocity = new Vector2(rb.velocity.x, jumpForce);
        }
    }

    private void OnDrawGizmos()
    {
        // Draw ground check radius in the editor
        Gizmos.color = Color.red;
        Gizmos.DrawWireSphere(groundCheck.position, groundCheckRadius);
    }
}
